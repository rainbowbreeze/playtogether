<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.rainbowbreeze.playtog" >

    <!-- Google+ Sign in -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- -->

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.example.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.gcm.permission.C2D_MESSAGE" />

    <application
        android:name=".common.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
        />

        <!-- Activities -->
        <activity
            android:name=".ui.PlusSignInActivity"
            android:label="@string/plussignin_title" >
        </activity>

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Providers -->
        <provider
            android:name=".data.provider.PlayerProvider"
            android:authorities="it.rainbowbreeze.playtog.provider"
            android:exported="false"
        />

        <!-- Receivers -->
        <receiver
            android:name=".logic.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="it.rainbowbreeze.playtog" />
            </intent-filter>
        </receiver>

        <!-- Services -->
        <service
            android:name=".logic.GPlusCommunicationService" >
        </service>

        <service android:name=".logic.GcmIntentService" />


    </application>

</manifest>
