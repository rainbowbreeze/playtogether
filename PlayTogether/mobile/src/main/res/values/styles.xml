<resources>

    <!-- Base application theme. So BaseTheme can be overridden without losing other attributes
          set in AppTheme -->
    <style name="AppTheme" parent="BaseTheme"/>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item> 
        <item name="colorPrimaryDark">@color/primary_dark</item> 
        <!-- TODO don't know if the following line works -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="colorControlHighlight">@color/accent_translucent</item> 
        <item name="colorAccent">@color/accent</item>
        <!-- https://github.com/antoniolg/MaterializeYourApp/blob/master/app/src/main/res/values/styles.xml
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        -->
    </style>

    <style name="common_fragmentMainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/common_activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/common_activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/common_activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/common_activity_vertical_margin</item>
    </style>

    <style name="common_lblMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/common_lblMessage_textSize</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
