<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/common_fragmentMainLayout"
    tools:context=".ui.StartGameFragment">

    <Button
        android:id="@+id/startgame_btnSearchForPlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/startgame_btnSearchForPlayers"
    />

    <Button
        android:id="@+id/startgame_btnConfirmGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/startgame_btnConfirmGame"
    />

    <ListView
        android:id="@+id/startgame_lstPlayers"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/startgame_btnSearchForPlayers"
        android:layout_above="@id/startgame_btnConfirmGame"
        android:choiceMode="multipleChoice"
    />
</RelativeLayout>
